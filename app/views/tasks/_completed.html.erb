<p style="color: green"><%= notice %></p>

<h1>Tasks</h1>

<div id="tasks">
  <% @tasks.each do |task| %>
    <%if task.completed%>
      <%= render task %>
        <p>
            <%= link_to "Show this task", task, class: "links" %>
        </p>
    <%end%>
  <% end %>
</div>

<%= link_to "New task", new_task_path, class: "links"%>
