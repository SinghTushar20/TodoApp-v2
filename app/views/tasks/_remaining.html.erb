<p style="color: green"><%= notice %></p>
<h1>Tasks</h1>
<div id="tasks">
  <% @tasks.each do |task| %>
    <%if task.completed %>
    <%else%>
      <%= render task %>
      <p>
        <%= link_to "Show this task", task %>
      </p>
    <%end%>
  <% end %>
</div>
<%= link_to "New task", new_task_path %>
